# 生产环境配置文件
# 请根据实际部署环境修改以下配置

# ================================
# 前端配置
# ================================
VITE_API_BASE_URL=/api

# ================================
# 数据库配置
# ================================
MYSQL_ROOT_PASSWORD=your_very_secure_root_password_change_this
MYSQL_DATABASE=wlweb_prod
MYSQL_USER=wlweb_prod
MYSQL_PASSWORD=your_very_secure_db_password_change_this

# ================================
# Redis配置
# ================================
REDIS_PASSWORD=your_very_secure_redis_password_change_this
REDIS_URL=redis://:your_very_secure_redis_password_change_this@redis:6379/0

# ================================
# 后端安全配置
# ================================
# JWT密钥（必须至少32个字符，建议使用随机生成）
# 生成命令: openssl rand -hex 32
SECRET_KEY=your_very_long_and_secure_secret_key_at_least_32_characters_long_change_this_immediately

# JWT算法和过期时间
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# 应用配置
# ================================
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS配置（根据实际域名修改）
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 数据库连接URL（通常不需要修改）
DATABASE_URL=mysql+pymysql://wlweb_prod:your_very_secure_db_password_change_this@mysql:3306/wlweb_prod

# ================================
# 应用业务配置
# ================================
APP_NAME=游戏脚本中间件管理系统
APP_VERSION=1.0.0

# 终端和任务配置
MAX_TERMINALS=1000
TASK_TIMEOUT=600
DATA_RETENTION_DAYS=90
ENABLE_AUTO_CLEANUP=true

# 用户注册配置
ENABLE_REGISTRATION=false

# ================================
# 日志配置
# ================================
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_BACKUP_COUNT=10

# ================================
# 安全配置
# ================================
# SSL/TLS配置
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================
# 性能配置
# ================================
# 后端工作进程数
WORKERS=4
MAX_WORKERS=8
WORKER_CONNECTIONS=1000

# 数据库连接池
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis连接池
REDIS_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=50

# ================================
# 监控配置
# ================================
# 启用监控
ENABLE_MONITORING=true
MONITORING_PORT=9100

# 健康检查
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ================================
# 备份配置
# ================================
# 自动备份
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/wlweb/backups

# ================================
# 邮件配置（可选）
# ================================
# SMTP配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=true

# 邮件发送配置
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=游戏脚本中间件管理系统

# ================================
# 第三方服务配置（可选）
# ================================
# 对象存储配置（如阿里云OSS、AWS S3等）
# OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your_access_key_id
# OSS_ACCESS_KEY_SECRET=your_access_key_secret
# OSS_BUCKET_NAME=your_bucket_name

# CDN配置
# CDN_DOMAIN=https://cdn.yourdomain.com

# ================================
# 开发和调试配置（生产环境应禁用）
# ================================
# 调试模式（生产环境必须为false）
DEBUG=false

# 性能分析（生产环境建议禁用）
ENABLE_PROFILING=false

# API文档（生产环境可选择禁用）
ENABLE_DOCS=false

# ================================
# 安全提醒
# ================================
# 1. 请务必修改所有默认密码
# 2. SECRET_KEY必须是随机生成的长字符串
# 3. 生产环境必须启用HTTPS
# 4. 定期更新密码和密钥
# 5. 限制数据库和Redis的网络访问
# 6. 定期备份重要数据
# 7. 监控系统日志和性能指标
# 8. 及时更新系统和依赖包